# Exemplo de arquivo .env para o projeto Django
# Copie este arquivo para .env e preencha com os valores reais

# Chave secreta do Django (gere uma nova para produção)
SECRET_KEY=django-insecure-sua-chave-secreta-aqui

# Modo de depuração (True para desenvolvimento, False para produção)
DEBUG=True

# Hosts permitidos (adicione domínios em produção, separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# Idioma (pt-br para português do Brasil)
LANGUAGE_CODE=pt-br

# Fuso horário (America/Sao_Paulo para Brasil)
TIME_ZONE=America/Sao_Paulo

